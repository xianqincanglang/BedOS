<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">


<struts>

	<!-- 指定全局国际化资源文件 -->
	<constant name="struts.custom.i18n.resources" value="mess"></constant>
	
	<!-- 指定国际化编码所使用的字符集 -->
	<constant name="struts.i18n.encoding" value="UTF-8"></constant>
	<constant name="struts.locale" value="zh_CN"></constant>
	<!-- 所有的Action定义都应该放在package下 -->
	<package name="chen" extends="struts-default">
		<action name="login" class="com.chen.LoginAction">
			<!-- 定义三个逻辑视图和物理资源之间的映射 -->
			<result name="input">/jsp/login/login.jsp</result>
			<result name="error">/jsp/login/login_fail.jsp</result>
			<result name="success">/jsp/back_index.jsp</result>
		</action>
	</package>
</struts>
